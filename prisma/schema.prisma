generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Book {
  id        String   @id @default(cuid())
  title     String
  author    String
  genre     String
  rating    Int      @default(0)
  status    String   // 'reading' | 'completed' | 'want-to-read'
  coverUrl  String?
  review    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("books")
}